<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/rounded_stroke"
    android:padding="8dp"
    android:layout_marginTop="8dp"
    android:layout_marginHorizontal="16dp">

    <TextView
        android:id="@+id/tanggal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/tanggal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"/>

    <TextView
        android:id="@+id/jenisKendaraan"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/jenisKendaraan"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/tanggal"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/durasiParkir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/durasiParkir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/jenisKendaraan"
        android:layout_marginTop="8dp"/>

    <TextView
        android:id="@+id/biayaParkir"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/biayaParkir"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/durasiParkir"
        android:layout_marginTop="8dp"/>

    <ImageView
        android:id="@+id/buttonDelete"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/iconDeleteHistoryDescription"
        android:src="@drawable/baseline_delete_24"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toBottomOf="parent"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"/>

</androidx.constraintlayout.widget.ConstraintLayout>